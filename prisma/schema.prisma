generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Configuration {
  id        String   @id @default(uuid())
  key       String   @unique // One response per review
  value     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("configurations")
}

// User model for both regular users and curators
model User {
  id                    String    @id @default(uuid())
  email                 String    @unique
  password              String
  firstName             String    @map("first_name")
  lastName              String    @map("last_name")
  avatar                String?
  bio                   String?
  phone                 String?
  googleId              String?   @map("google_id") @db.VarChar(255)
  facebookId            String?   @map("facebook_id") @db.VarChar(255)
  emailVerifiedAt       DateTime? @map("email_verified_at")
  emailVerificationCode String?   @map("email_verification_code") @db.VarChar(64)
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  // Relations
  personalAccessTokens PersonalAccessToken[] @relation("TokenUser")
  locationId           String?

  @@index([email])
  @@map("users")
}

// User personal access token model
model PersonalAccessToken {
  id         String    @id @default(uuid())
  userId     String
  name       String
  token      String    @unique @db.Text
  abilities  Json?
  lastUsedAt DateTime?
  expiresAt  DateTime?
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")

  // Relations
  user User @relation("TokenUser", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("personal_access_tokens")
}

// NFT model
model Nft {
  id          String    @id @default(uuid())
  name        String
  identifier  String    @unique
  contract    String
  description String?
  imageUrl    String?   @map("image_url")
  metadata    Json?
  createdAt   DateTime? @default(now()) @map("created_at")
  updatedAt   DateTime? @updatedAt @map("updated_at")
  nftOrder    NftOrder?

  @@map("nfts")
}

enum NftOrderStatus {
  ACTIVE
  INACTIVE
  FULFILLED
  EXPIRED
  CANCELLED
}

model NftOrder {
  id                String         @id @default(uuid())
  nftId             String         @unique @map("nft_id")
  price             BigInt         @map("price")
  status            NftOrderStatus
  orderHash         String         @unique @map("order_hash")
  listedAt          DateTime?      @map("listed_at")
  expiresAt         DateTime?      @map("expires_at")
  createdAt         DateTime?      @default(now()) @map("created_at")
  updatedAt         DateTime?      @updatedAt @map("updated_at")
  remainingQuantity Int            @default(1) @map("remaining_quantity")

  // Relations
  nft Nft @relation(fields: [nftId], references: [id], onDelete: Cascade)

  @@index([nftId])
  @@map("nft_orders")
}
